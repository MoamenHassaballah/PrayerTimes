<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/splash" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/prayer_times"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.883"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_settings" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:cardElevation="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="2h 30m"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_40ssp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/remaining_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/remaining_for_the_next_prayer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/location_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:cardElevation="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ic_location"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tahreer"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/state_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cairo, Egypt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:cardElevation="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_24h_format"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_centerVertical="true"/>

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/time_format_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            app:colorBorder="@color/black"
                            app:colorOn="@color/black"
                            app:on="true"
                            app:textOff=""
                            app:textOn="" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fajr"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_centerVertical="true"/>


                        <TextView
                            android:id="@+id/fajr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="04:30"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/dhuhr"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />


                        <TextView
                            android:id="@+id/dhuhr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="11:55"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/asr"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />


                        <TextView
                            android:id="@+id/asr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="15:17"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/maghrib"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />


                        <TextView
                            android:id="@+id/maghrib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="17:46"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/isha"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />


                        <TextView
                            android:id="@+id/isha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="19:00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp" />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>